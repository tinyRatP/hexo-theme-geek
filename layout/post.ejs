<div class="hd posts">
    <a href="<%= config.root %>"><i class="fa fa-reply replay-btn"
            aria-hidden="true"></i></a>
    <div class="post-title">
        <p>
            <%= page.title %>
        </p>
        <hr>
    </div>
    <div class="post-content">
        <%- page.content %>
        <% if (!page.noTime) { %>
        <p>（全文完）<%- full_date(page.date, 'L') %></p>
        <% } %>
        <p>
        <% if (page.tags) { %>
        <% page.tags.forEach(function(tag){  %>
            <a href="<%- config.root %>/tags/<%- tag.name %>">#<%= tag.name %></a>
        <% }); %>
        <% } %>
        </p>
    </div>

    <% if (theme.valine.enable && page.comments) { %>
    <hr class="fhr">
    <div id="vcomments"></div>
    <% } %>
</div>
